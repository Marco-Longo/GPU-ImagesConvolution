        barrier(CLK_LOCAL_MEM_FENCE);

        if(lidx < attivi)
        {
            acc += lmem[lidx+attivi];
            lmem[lidx] = (complex)(acc.x, acc.y);
        }
    }

    if(lidx == 0)
        output[get_group_id(0)] = (complex)(acc.x, acc.y);
}

