    {
        int idx_r = gws*i + idx;
        if(idx_r >= quarts)
            break;

        complex2 val = input[idx_r]; //RE: s0, s2

        acc.x += (val.s0 + val.s2);
        acc.y += (val.s1 + val.s3);
    }

    int lidx = get_local_id(0);
    int lws = get_local_size(0);

    lmem[lidx] = (complex)(acc.x, acc.y);

    for(int attivi = lws/2; attivi >= 1; attivi /= 2)
